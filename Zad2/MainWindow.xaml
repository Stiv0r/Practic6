        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zad2"
        mc:Ignorable="d"
        Title="MainWindow" Background="DarkViolet" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Введите трехзначное число:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="inputTextBox" Text="" Grid.Row="0" Grid.Column="1" Margin="5"/>
        <Button Content="Решить" Click="Button_Click" Grid.Row="1" Margin="519,346,5,5" Grid.Column="1"/>
        <Label x:Name="resultLabel" Content="" Grid.Row="1" Margin="10,10,10,85" Grid.Column="1"/>
    </Grid>
</Window>
